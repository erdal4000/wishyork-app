
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Allow authenticated users to read and write their own user document
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if isAuthenticated();
    }

    // Allow username lookups for authenticated users
    match /usernames/{username} {
      allow read, create, delete: if isAuthenticated();
    }

    // Allow authenticated users to read/write posts, wishlists, and their subcollections (items, comments)
    // This is a broad rule for debugging purposes.
    match /{path=**} {
       allow read, write: if isAuthenticated();
    }
  }
}
