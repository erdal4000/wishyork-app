
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow logged-in users to read/write to the 'users' and 'usernames' collections
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    match /usernames/{username} {
      allow read, write: if request.auth != null;
    }
    
    // Allow logged-in users to read/write to the 'posts' collection
    match /posts/{postId} {
      allow read, write: if request.auth != null;
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
