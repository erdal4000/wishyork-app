rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if true;
      allow create, update: if request.auth.uid == userId;
    }

    match /usernames/{username} {
      allow read: if true;
      allow create: if request.auth.uid == request.resource.data.uid;
    }

    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.authorId;
    }

    match /wishlists/{wishlistId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.authorId;

      // Allow creating, reading, updating, and deleting items in a wishlist
      match /items/{itemId} {
        allow read: if true;
        // Only authenticated users can create items
        allow create: if request.auth != null;
        // Only the wishlist author can update or delete items
        allow update, delete: if request.auth.uid == get(/databases/$(database)/documents/wishlists/$(wishlistId)).data.authorId;
      }
    }
  }
}
