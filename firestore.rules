rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // --- USERS ---
    // Users can read their own data.
    // Public user profiles can be read by anyone.
    match /users/{userId} {
      allow read;
      allow update, delete: if request.auth.uid == userId;
      allow create: if isSignedIn();
    }
    
    // Usernames must be unique.
    match /usernames/{username} {
      allow read;
      allow create: if isSignedIn();
    }

    // --- POSTS ---
    match /posts/{postId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.authorId == request.auth.uid;

      // Comments subcollection
      match /comments/{commentId} {
        allow read, create: if isSignedIn();
        allow update, delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
      }
    }
    
    // --- WISHLISTS ---
    match /wishlists/{wishlistId} {
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
      // Read access logic:
      // 1. Allow if public
      // 2. Allow if user is the author (for private/friends lists)
      allow read: if resource.data.privacy == 'public' || (isSignedIn() && resource.data.authorId == request.auth.uid);
      
      // Items subcollection
      match /items/{itemId} {
        allow read, create: if isSignedIn();
        allow update, delete: if isSignedIn() && parent.data.authorId == request.auth.uid;
      }

      // Comments subcollection
      match /comments/{commentId} {
        allow read, create: if isSignedIn();
        allow update, delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
      }
    }

    // --- COLLECTION GROUP RULES ---
    // These are crucial for the feed functionality to work.
    // It allows reading posts and wishlists across all users if the user is signed in.
    match /{path=**}/posts/{postId} {
      allow read: if isSignedIn();
    }

    match /{path=**}/wishlists/{wishlistId} {
      allow read: if isSignedIn();
    }
  }
}
