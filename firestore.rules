rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /{document=**} {
      allow read: if request.auth != null;
    }

    match /users/{userId} {
      allow update: if request.auth.uid == userId ||
                       (request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['followers', 'followersCount']));
      
      allow create: if request.auth.uid == userId;
    }

    match /usernames/{username} {
      allow create: if request.auth != null;
    }

    match /posts/{postId} {
      allow create: if request.auth.uid == request.resource.data.authorId;
      allow delete: if request.auth.uid == resource.data.authorId;
      
      allow update: if request.auth != null &&
                       request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['likedBy', 'likes', 'commentCount']);
                         
      match /comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth.uid == request.resource.data.authorId;
        allow delete: if request.auth.uid == resource.data.authorId;
        // Allow updating replyCount when someone replies to a comment
        allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['replyCount']);
      }
    }

    match /wishlists/{wishlistId} {
      // Allow the author to update their own wishlist, or anyone to update the commentCount
      allow update: if (request.auth.uid == resource.data.authorId) ||
                       (request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['commentCount']));

      allow create, delete: if request.auth.uid == request.resource.data.authorId;
      
      match /comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth.uid == request.resource.data.authorId;
        allow delete: if request.auth.uid == resource.data.authorId;
        // Allow updating replyCount when someone replies to a comment
        allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['replyCount']);
      }

      match /items/{itemId} {
        allow create, delete: if get(/databases/$(database)/documents/wishlists/$(wishlistId)).data.authorId == request.auth.uid;
        allow update: if request.auth != null;
      }
    }
  }
}
