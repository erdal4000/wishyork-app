rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Kullanıcılar kendi profilini okuyabilir ve güncelleyebilir.
    // Herkes (giriş yapmış) diğer kullanıcıların profillerini okuyabilir.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow update: if request.auth.uid == userId;
    }

    // Kullanıcı adlarının benzersizliğini sağlamak için kullanılır.
    // Sadece sunucu tarafı veya kimliği doğrulanmış kullanıcılar oluşturabilir, kimse okuyamaz/silemez.
    match /usernames/{username} {
      allow read: if false;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Ana akışın çalışması için GEREKLİ KURAL:
    // Giriş yapmış herhangi bir kullanıcı, tüm gönderileri okuyabilir.
    match /posts/{postId} {
      allow read: if request.auth != null;
      // Sadece gönderi sahibi gönderisini oluşturabilir, güncelleyebilir veya silebilir.
      allow create, update, delete: if request.auth.uid == request.resource.data.authorId;

      // Yorumlar için kurallar
      match /comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update, delete: if request.auth.uid == resource.data.authorId;
      }
    }

    // Ana akışın çalışması için GEREKLİ KURAL:
    // Giriş yapmış herhangi bir kullanıcı, dilek listelerini okuyabilir.
    // Gizlilik, kod tarafında (client-side) kontrol edilecek.
    match /wishlists/{wishlistId} {
      allow read: if request.auth != null;
      // Sadece dilek listesi sahibi listesini oluşturabilir, güncelleyebilir veya silebilir.
      allow create, update, delete: if request.auth.uid == request.resource.data.authorId;

      // Dilek listesi içindeki item'lar için kurallar
      match /items/{itemId} {
        allow read: if request.auth != null;
        // Sadece liste sahibi item ekleyebilir/silebilir.
        allow create, delete: if get(/databases/$(database)/documents/wishlists/$(wishlistId)).data.authorId == request.auth.uid;
        // Giriş yapmış herkes bir item'ı güncelleyebilir (rezerve etmek/satın almak için).
        allow update: if request.auth != null;
      }

      // Yorumlar için kurallar
      match /comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update, delete: if request.auth.uid == resource.data.authorId;
      }
    }
  }
}
