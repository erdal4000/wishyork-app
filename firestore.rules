rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to wishlists, but only authenticated users can create them.
    match /wishlists/{wishlistId} {
      allow read: if true;
      allow create: if request.auth != null;
      // Further updates and deletes should be restricted to the owner.
      allow update, delete: if request.auth.uid == resource.data.authorId;
    }

    // Usernames must be unique. Only the user can create their username document.
    match /usernames/{username} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // Users can only read and create their own user document.
    match /users/{userId} {
      allow read, create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to create posts.
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.authorId;
    }
  }
}
