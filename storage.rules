rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files for everyone.
    // This allows anyone to view profile pictures, cover photos, etc.
    match /{allPaths=**} {
      allow read;
    }

    // Rules for user-specific images (avatars, covers)
    match /user-images/{userId}/{allPaths=**} {
      // 1. Only the authenticated user can write to their own folder.
      // 2. The user must be logged in (request.auth != null).
      // 3. The uploaded file must be an image.
      // 4. The uploaded file size must be less than 5MB.
      allow write: if request.auth != null && 
                      request.auth.uid == userId &&
                      request.resource.contentType.matches('image/.*') &&
                      request.resource.size < 5 * 1024 * 1024;
    }
  }
}
