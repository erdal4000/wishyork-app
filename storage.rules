rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isOwner(wishlistId) {
      return get(/databases/$(database)/documents/wishlists/$(wishlistId)).data.authorId == request.auth.uid;
    }

    // Rule for Profile & Cover Photos
    match /user-images/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Rule for Wishlist Item Photos
    match /item-images/{wishlistId}/{allPaths=**} {
      allow read;
      // Allow write only if the user uploading the image is the owner of the wishlist.
      allow write: if request.auth != null && isOwner(wishlistId)
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
