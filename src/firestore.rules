
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /{document=**} {
      allow read: if request.auth != null;
    }

    match /users/{userId} {
      allow update: if request.auth.uid == userId ||
                       (request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['followers', 'followersCount']));
      
      allow create: if request.auth.uid == userId;
    }

    match /usernames/{username} {
      allow create: if request.auth != null;
    }

    match /posts/{postId} {
      allow create: if request.auth.uid == request.resource.data.authorId;
      allow delete: if request.auth.uid == resource.data.authorId;
      
      // 'commentCount' alanının artırılmasına izin ver
      allow update: if request.auth != null &&
                       request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['likedBy', 'likes', 'commentCount']);
                         
      // Yorumlar alt koleksiyonu için kurallar
      match /comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth.uid == request.resource.data.authorId;
        allow delete: if request.auth.uid == resource.data.authorId;
      }
    }

    match /wishlists/{wishlistId} {
      // 'commentCount' alanının artırılmasına izin ver
      allow update: if request.auth.uid == request.resource.data.authorId ||
                       (request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['commentCount']));

      allow create, delete: if request.auth.uid == request.resource.data.authorId;
      
      // Yorumlar alt koleksiyonu için kurallar
      match /comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth.uid == request.resource.data.authorId;
        allow delete: if request.auth.uid == resource.data.authorId;
      }

      match /items/{itemId} {
        allow create, delete: if get(/databases/$(database)/documents/wishlists/$(wishlistId)).data.authorId == request.auth.uid;
        allow update: if request.auth != null;
      }
    }
  }
}
